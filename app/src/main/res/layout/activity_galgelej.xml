<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GalgelejActivity"
    android:backgroundTint="#b2ffff">

    <TextView android:text="Galgeleg" android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spil"
        android:id="@+id/buttonSpil"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="brugte bogstaver:"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/textViewSynligtOrd"
        android:layout_alignBottom="@+id/textViewSynligtOrd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="********"
        android:id="@+id/textViewSynligtOrd"
        android:layout_below="@+id/buttonSpil"
        android:layout_alignLeft="@+id/buttonGæt"
        android:layout_alignStart="@+id/buttonGæt"
        android:layout_alignRight="@+id/buttonSpil"
        android:layout_alignEnd="@+id/buttonSpil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gæt et bogstav"
        android:id="@+id/textView3"
        android:layout_above="@+id/imageViewet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewet"
        android:contentDescription="galgeimage"
        android:layout_toEndOf="@+id/textViewOrdet"
        android:layout_below="@+id/buttonGæt" />
        <!--android:layout_alignLeft="@+id/textViewOrdet"
        android:layout_alignStart="@+id/textViewOrdet"
        />
        -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="[]"
        android:id="@+id/textViewBrugteBogst"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBogstav"
        android:layout_alignBottom="@+id/buttonGæt"
        android:layout_toLeftOf="@+id/buttonGæt"
        android:layout_toStartOf="@+id/buttonGæt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="&lt;ordet>"
        android:id="@+id/textViewOrdet"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textViewBrugteBogst"
        android:layout_toStartOf="@+id/textViewBrugteBogst" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gæt bogstav"
        android:id="@+id/buttonGæt"
        android:layout_below="@+id/textViewBrugteBogst"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small debug Text"
        android:id="@+id/textViewDebug"
        android:layout_alignTop="@+id/textViewOrdet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextGætOrdet"
        android:layout_alignBottom="@+id/buttonGætOrdet"
        android:layout_toRightOf="@+id/buttonGætOrdet"
        android:layout_toEndOf="@+id/buttonGætOrdet" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gæt ordet"
        android:id="@+id/buttonGætOrdet"

        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
